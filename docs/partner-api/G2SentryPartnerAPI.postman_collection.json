						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();\r",
									"\r",
									"pm.test(\"Response should match the expected schema\", function () {\r",
									"    pm.response.to.have.jsonSchema({\r",
									"        type: \"object\",\r",
									"        properties: {\r",
									"            partnerKey: { type: \"string\" },\r",
									"            name: { type: \"string\" },\r",
									"            accessToken: { type: \"string\" },\r",
									"            refreshToken: { type: \"string\" }\r",
									"        },\r",
									"        required: [\"partnerKey\", \"name\", \"accessToken\", \"refreshToken\"]\r",
									"    });\r",
									"});\r",
									"\r",
									"\r",
									"// Test for status code\r",
									"pm.test(\"Status code is 200\", function () {\r",
									"    pm.response.to.have.status(200);\r",
									"});\r",
									"\r",
									"pm.test(\"Valid data\", () => {\r",
									"  pm.expect(jsonData.partnerKey).to.eql(\"TEST_PARTNER\");\r",
									"  pm.expect(jsonData.name).to.eql(\"Test Partner Company\");\r",
									"});\r",
									"\r",
									"pm.environment.set(\"accessToken\", jsonData.accessToken);\r",
									"pm.environment.set(\"refreshToken\", jsonData.refreshToken);\r",
									""
								],
								"type": "text/javascript",
								"packages": {}
							}
						}
					],
